<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %> 前の投稿
    <% if current_user?(micropost.user) %>
    <%= link_to "削除", micropost, data: { "turbo-method": :delete,
                                            turbo_confirm: "本当に削除しますか？" } %>
    <%= link_to 'Xでシェア', 
    "https://twitter.com/share?url=https://natsuhodo-app.onrender.com&text= 20文字以内で、みなさんを「懐かしい!」気持ちにさせてください。
    %0a-----------------------
    %0a#{micropost.content}
    %0a-----------------------
    %0aby 懐かしいにもほどがある!
    %0a",
    title: 'X', target: '_blank' %>
  <% end %>
  </span>
</li>
